    <script>

        function resetForm() {
            document.getElementById('createEventForm').reset();

            document.querySelectorAll('.theme img.selected').forEach(img => {
                img.classList.remove('selected');
            });
            document.querySelectorAll('.theme span.selected').forEach(span => {
                span.classList.remove('selected');
            });

        }

        function toggleCheckBox() {

            var checkbox = document.getElementById('multiSessionEvent');

            if (checkbox.checked) {
                checkbox.value = "true";
            } else {
                checkbox.value = "false";
            }
        }

        document.addEventListener('DOMContentLoaded', function () {

            document.getElementById('createEventForm').addEventListener('submit', function (event) {
                // Prevent the default form submission
                event.preventDefault();

                // Collect form data
                var formData = new FormData(event.target);

                for (let [key, value] of formData.entries()) {
                    console.log(key, value);
                }

                // Send the form data to the "/generate-ticket" endpoint using `fetch`
                fetch('/generate-ticket', {
                    method: 'POST',
                    body: formData
                })
                    .then(response => {
                        if (response.ok) {
                            return response.blob(); // Assuming the server responds with a blob for download
                        }
                        throw new Error('Network response was not ok.');
                    })
                    .then(blob => {

                        const url = window.URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.style.display = 'none';
                        a.href = url;
                        a.download = 'ticket.png';
                        document.body.appendChild(a);
                        a.click();
                        window.URL.revokeObjectURL(url);
                        a.remove();
                    })
                    .catch(error => console.error('Error:', error));
            });
        });
    </script>
