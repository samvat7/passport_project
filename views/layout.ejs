    <div class="create-event-container">
        <p id="create-page-heading">Book Your Ticket</p>
        <form id="createEventForm" method="post" action="/generate-ticket">
            <div id="event-form-main-div">
                <div id="event-form-child-div">
                    <div id="event-details-div">
                        <div id="experienceName-div">
